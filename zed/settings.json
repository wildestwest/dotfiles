  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 400
  },
  "auto_install_extensions": {
    "dockerfile": true,
    "docker-compose": true,
    "helm": true,
    "graphql": true,
    "ansible": true
  },
  "disable_ai": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "wrap_guides": [80, 120],
  "cursor_blink": false,
  "vertical_scroll_margin": 8,
  "show_signature_help_after_edits": true,
  "active_pane_modifiers": {
    "inactive_opacity": 0.8
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "restore_on_startup": "last_workspace",
  "use_smartcase_search": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "file_types": {
    "Helm": [
      "**/templates/*.yaml",
      "**/templates/*.yml",
      "**/*values*.yaml",
      "**/chart.yaml"
    ]
  },
  "format_on_save": "off",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "dock": "right",
    "cursor_shape": "block",
    "copy_on_select": true,
    "toolbar": {
      "breadcrumbs": false
    }
  }
}
