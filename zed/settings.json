{
  "git_panel": {
    "dock": "left"
  },
  "ssh_connections": [
    {
      "host": "coder.ewa",
      "projects": [
        {
          "paths": [
            "/home/coder"
          ]
        },
        {
          "paths": [
            "/home/coder/repos/automation"
          ]
        },
        {
          "paths": [
            "/home/coder/repos/localstack-ewa"
          ]
        },
        {
          "paths": [
            "~/.config"
          ]
        },
        {
          "paths": [
            "~/repos/afw_ewa"
          ]
        },
        {
          "paths": [
            "~/repos/auto_wwa_api"
          ]
        },
        {
          "paths": [
            "~/repos/auto_wwa_event"
          ]
        },
        {
          "paths": [
            "~/repos/data-ingest-mission-management"
          ]
        },
        {
          "paths": [
            "~/repos/data-ingest-wwa"
          ]
        },
        {
          "paths": [
            "~/repos/dev-base-image"
          ]
        },
        {
          "paths": [
            "~/repos/ewa-scripts"
          ]
        },
        {
          "paths": [
            "~/repos/incident-archive-api"
          ]
        },
        {
          "paths": [
            "~/repos/infrastructure"
          ]
        },
        {
          "paths": [
            "~/repos/jwt_server"
          ]
        },
        {
          "paths": [
            "~/repos/mission_briefing_event"
          ]
        },
        {
          "paths": [
            "~/repos/mongodb"
          ]
        },
        {
          "paths": [
            "~/repos/sca_simulator"
          ]
        },
        {
          "paths": [
            "~/repos/spire-api"
          ]
        },
        {
          "paths": [
            "~/repos/spire-gui"
          ]
        },
        {
          "paths": [
            "~/repos/tc_tap_api"
          ]
        },
        {
          "paths": [
            "~/repos/wip_api"
          ]
        }
      ]
    }
  ],
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 300
  },
  "auto_install_extensions": {
    "dockerfile": true,
    "docker-compose": true,
    "helm": true,
    "graphql": true,
    "ansible": true,
    "python-snippets": true
  },
  "disable_ai": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "wrap_guides": [80, 120],
  "cursor_blink": false,
  "vertical_scroll_margin": 8,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "file_types": {
    "Helm": ["**/templates/*.yaml", "**/templates/*.yml", "**/values*.yaml"]
  },
  "format_on_save": "off",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "dock": "right",
    "cursor_shape": "block",
    "copy_on_select": true,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
